{
  "name": "briscola",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --base=/briscola/",
    "serve": "vite preview --base=/briscola/",
    "lint": "eslint src --fix",
    "format": "prettier --write src --fix",
    "fix": "pnpm lint && pnpm format",
    "release": "pnpm fix && pnpm build && gh-pages --dist dist",
    "test": "playwright test --headed --timeout 0",
    "generate": "node scripts/generateCards.cjs && pnpm fix"
  },
  "dependencies": {
    "@boardgame.io/p2p": "^0.4.4",
    "boardgame.io": ">=0.49.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.29.1",
    "@tailwindcss/typography": "^0.5.8",
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "@vitejs/plugin-react": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "daisyui": "^2.46.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^4.0.0",
    "playwright": "^1.29.1",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  }
}
